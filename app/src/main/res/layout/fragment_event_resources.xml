<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".EventResourcesFragment">

    <TextView
        android:id="@+id/nameOfEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eventRulesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules"
        app:layout_constraintBottom_toTopOf="@+id/toStudyFragmentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupEvent" />

    <RadioGroup
        android:id="@+id/radioGroupEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/eventRulesButton"
        app:layout_constraintTop_toBottomOf="@+id/nameOfEvent"
        tools:layout_editor_absoluteX="130dp">

        <RadioButton
            android:id="@+id/aboutEventRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:text="About" />

        <RadioButton
            android:id="@+id/eventRulesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:text="Rules" />
    </RadioGroup>

    <TextView
        android:id="@+id/eventInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toStudyFragmentButton" />

    <Button
        android:id="@+id/toStudyFragmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Event Resources"
        app:layout_constraintBottom_toTopOf="@+id/eventInfoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventRulesButton" />


</androidx.constraintlayout.widget.ConstraintLayout>